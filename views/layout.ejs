    /* Set gray background color and 100% height */
    .sidenav {
      background-color: #006400;
      height: 100%;
    }
    /*Login, logout, register buttons and image*/
    .account{
      padding-left: 900px;
      display:inline;
    }
    /* Set black background color, white text and some padding */
    footer {
      background-color: #555;
      color: white;

      
    }
    /*Controls the main body*/
    .area{
          position: absolute;
          min-height: 10px;
          height: 88%;
          top:10em;
          left:26em;
          width:74%;
          overflow: scroll;
          
    }
    ul{
      list-style-type: none;
    }
    .account{
     

    }
    .col-sm-9{
      height: 15%;
    }
    #login{
      position: absolute;
      left:55em;
    }
    #logout{
      position: absolute;
      left:60em;
    }
    #register{
      position: relative;
      left:65em;
    }
    #profilePicture{
      position: absolute;
      left:70em;
    }
    #create{
       position: absolute;
       width:5em;
       height:2.5em;
       background: #5F9EA0;
       top:6em;
